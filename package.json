{
  "name": "marvel-db-api-new",
  "version": "1.2.0",
  "author": "Daniel Sogl",
  "description": "A simple to use Marvel API wrapper powered by Express.js and TypeScript",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/danielsogl/marvel-db-api.git"
  },
  "main": "./dist/server.js",
  "scripts": {
    "prestart": "npm run build",
    "start": "npm run serve",
    "build": "npm run clean && npm run build-ts && npm run tslint",
    "clean": "rimraf -rf dist && mkdir dist",
    "serve": "node ./dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "engines": {
    "node": "latest"
  },
  "dependencies": {
    "apicache": "^1.5.3",
    "axios": "^0.18.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "pjson": "^1.0.9",
    "redis": "^2.8.0",
    "url-params": "^1.0.2",
    "winston": "^2.4.4"
  },
  "devDependencies": {
    "@types/apicache": "^1.2.2",
    "@types/compression": "0.0.36",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^4.0.3",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.17.6",
    "@types/helmet": "0.0.38",
    "@types/jest": "^23.3.14",
    "@types/node": "9.6.8",
    "@types/redis": "^2.8.21",
    "@types/supertest": "^2.0.9",
    "@types/url-params": "^1.0.0",
    "@types/winston": "^2.4.4",
    "concurrently": "^3.6.1",
    "jest": "^23.6.0",
    "nodemon": "^1.19.4",
    "rimraf": "^2.7.1",
    "supertest": "^3.4.2",
    "ts-jest": "^22.4.6",
    "tslint": "^5.20.1",
    "typescript": "^2.9.2"
  }
}
